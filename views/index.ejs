<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>

        <a href="/blogs/<%=blog.id%> "><div class="separation">

            <h3 class="title"><%= blog.blogTitle %></h3>
            <p class="snippet"><%= blog.blogSnippet %></p>    

        </div>
    </a>
      
      <% }) %>
    <% } else { %>
      <p>You haven't created any blogs</p>
    <% } %>
    
  </div>


</body>
</html>